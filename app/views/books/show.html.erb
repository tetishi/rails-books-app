<p id="notice"><%= notice %></p>

<p>
  <strong><%= t('activerecord.attributes.book.title') %></strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= t('activerecord.attributes.book.memo') %></strong>
  <%= @book.memo %>
</p>

<p>
	<strong><%= t('activerecord.attributes.book.author') %></strong>
	<%= @book.author %>
</p>

<p>
  <strong><%= t('activerecord.attributes.book.picture') %></strong>
	<%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% if @book.user == current_user %>
  <%= link_to t('activerecord.attributes.book.show'), edit_book_path(@book) %> |
<% end %>
<%= link_to t('activerecord.attributes.book.back'), books_path %>

<%= render partial: "comments/comments", locals: {commentable: @book} %>
<%= render partial: "comments/form", locals: {commentable: @book} %>
