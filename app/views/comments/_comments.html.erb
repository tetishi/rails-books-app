<h3>Comments</h3>
<% commentable.comments.each do |comment| %>
  <p><%= link_to "user_detail", user_path(comment.user) %></p>
  <p><%= comment.body %></p>

  <% if comment.user_id == current_user.id %>
    <%= link_to t('.Destroy'), [commentable, comment], method: :delete, data: { confirm: t('Are you sure?') } %>
  <% end %>

  <br>
<% end %>
