<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.report') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.report.title') %></th>
      <th><%= t('activerecord.attributes.report.body') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.body %></td>
        <td><%= link_to t('activerecord.attributes.report.show'), report %></td>
        <% if report.user == current_user %>
          <td><%= link_to t('activerecord.attributes.report.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('activerecord.attributes.report.destroy'), report, method: :delete, data: { confirm: t("activerecord.attributes.book.are_you_sure") } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('activerecord.attributes.report.new_report'), new_report_path %>

<%= paginate @reports %>
